# Secrets Configuration - Copy this file to secrets.env and fill in your values
# This file contains sensitive information that should NOT be shared

# Hostnames and Domains
HOSTNAME=your-hostname.example.com
BASE_HOSTNAME=your-hostname
PUBLIC_HOSTNAME=your-public-domain.com
JELLYSEERR_HOSTNAME=jellyseerr.your-public-domain.com

# API Keys - Get these from each service's settings
RADARR_API_KEY=your-radarr-api-key
SONARR_API_KEY=your-sonarr-api-key
LIDARR_API_KEY=your-lidarr-api-key
PROWLARR_API_KEY=your-prowlarr-api-key
JELLYFIN_API_KEY=your-jellyfin-api-key
JELLYSEERR_API_KEY=your-jellyseerr-api-key

# Service Credentials
QBITTORRENT_USERNAME=admin
QBITTORRENT_PASSWORD=changeme

# Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=postgres

# pgAdmin Credentials
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=changeme

# Cloudflare Configuration
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_DNS_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_API_TOKEN=your-cloudflare-zone-token
CLOUDFLARE_API_TOKEN=${CLOUDFLARE_DNS_API_TOKEN}
CLOUDFLARE_DDNS_DOMAINS=service1.your-domain.com,service2.your-domain.com
CLOUDFLARE_DDNS_PROXIED=false

# Let's Encrypt
LETS_ENCRYPT_EMAIL=your-email@example.com

# Plex Configuration
PLEX_CLAIM=claim-xxxxxxxxxxxxxxxxxx

# Homepage Configuration
HOMEPAGE_VAR_TITLE="My Media Server"
HOMEPAGE_VAR_WEATHER_CITY=Your City,State
HOMEPAGE_VAR_WEATHER_LAT=
HOMEPAGE_VAR_WEATHER_LONG= 